<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cardViewProveedores"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/marginTop_10"
    app:cardElevation="@dimen/elevation_4"
    app:cardCornerRadius="@dimen/corner_radius_8"
    android:foreground="?android:attr/selectableItemBackground">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/borde_card_green"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="1"
            android:baselineAligned="false">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="0.7"
                android:gravity="center"
                android:baselineAligned="false">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/imgvProveedor"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_gravity="center_horizontal"
                    android:scaleType="centerCrop"
                    android:elevation="10dp"
                    android:src="@drawable/ic_add_img"
                    app:civ_border_width="1dp"
                    app:civ_border_color="@color/colorSecondaryText"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="0.3"
                android:weightSum="1"
                android:baselineAligned="false">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_50"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/txtNameProveedor"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        tools:text="Julio Cesar"
                        android:textSize="@dimen/size_24"
                        android:padding="2dp"
                        android:gravity="center_vertical"
                        android:fontFamily="@font/roboto_light"
                        android:autoSizeTextType="uniform"
                        android:autoSizeMaxTextSize="@dimen/size_28"
                        android:autoSizeMinTextSize="@dimen/size_8"/>
                    <TextView
                        android:id="@+id/txtLastNameProveedor"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        tools:text="Camacho"
                        android:textSize="@dimen/size_24"
                        android:padding="2dp"
                        android:gravity="center_vertical"
                        android:fontFamily="@font/roboto_light"
                        android:autoSizeTextType="uniform"
                        android:autoSizeMaxTextSize="@dimen/size_28"
                        android:autoSizeMinTextSize="@dimen/size_8"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:baselineAligned="false">
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginEnd="@dimen/margin_5"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/ic_flechas"/>
                    <TextView
                        android:id="@+id/txtNameCompany"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        tools:text="Huevo Alpera"
                        android:textSize="@dimen/size_18"
                        android:padding="2dp"
                        android:layout_gravity="center_vertical"
                        android:fontFamily="@font/roboto_light"
                        android:autoSizeTextType="uniform"
                        android:autoSizeMaxTextSize="@dimen/size_15"
                        android:autoSizeMinTextSize="@dimen/size_8"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:baselineAligned="false">
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginEnd="@dimen/margin_5"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/ic_smartphone"/>
                    <TextView
                        android:id="@+id/txtPhoneNumber"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_margin="@dimen/margin_10"
                        tools:text="4531260729"
                        android:textSize="@dimen/size_13"
                        android:fontFamily="@font/roboto_light"/>
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayoutExpandible"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/layoutWhattsap"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:foreground="?attr/selectableItemBackground"
                android:layout_weight="1">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_margin="@dimen/margin_10"
                    android:elevation="10dp"
                    android:src="@drawable/ic_whatsapp"/>
            </LinearLayout>


            <LinearLayout
                android:id="@+id/layoutEditContact"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:foreground="?attr/selectableItemBackground"
                android:layout_weight="1">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_margin="@dimen/margin_10"
                    android:elevation="10dp"
                    android:src="@drawable/ic_edit_user"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutCall"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:foreground="?attr/selectableItemBackground"
                android:layout_weight="1">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="25dp"
                    android:layout_margin="@dimen/margin_10"
                    android:elevation="10dp"
                    android:src="@drawable/ic_call"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <ImageView
        android:id="@+id/imgFlechaExpandir"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:src="@drawable/ic_expand_more_black_24dp"
        android:layout_gravity="right"/>
</androidx.cardview.widget.CardView>