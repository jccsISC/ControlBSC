<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/activityModificarMovimiento"
    tools:context=".activities.ModificarMovimientoActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar"/>

    </com.google.android.material.appbar.AppBarLayout>

    <TextView
        android:id="@+id/txtMensaje"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Seleccione el registro que quiere modificar"
        android:layout_marginTop="@dimen/marginTop_20"
        android:fontFamily="@font/roboto_regular"
        android:textSize="@dimen/size_18"
        android:layout_margin="@dimen/margin_20"/>

    <com.mikelau.views.shimmer.ShimmerRecyclerViewX
        android:id="@+id/recyclerViewModificarMovimiento"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginEnd="@dimen/margin_20"
        android:layout_marginStart="@dimen/margin_20"
        app:shimmer_demo_layout="@layout/layout_demo_grid_resumen" />
    

</LinearLayout>