<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cardViewProducto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/height_card_p_80"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/padding_10"
    app:cardCornerRadius="8dp"
    app:cardElevation="8dp"
    android:foreground="?android:attr/selectableItemBackground">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="1"
        android:background="@drawable/borde_card"
        android:baselineAligned="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="0.5"
            android:baselineAligned="false">
            <TextView
                android:id="@+id/textNameProducto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:text="PAPADA"
                android:textSize="@dimen/size_25"
                android:padding="@dimen/padding_5"
                android:fontFamily="@font/roboto_regular"
                android:gravity="center"
                android:autoSizeTextType="uniform"
                android:autoSizeMaxTextSize="@dimen/size_25"
                android:autoSizeMinTextSize="@dimen/size_12"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="0.5"
            android:baselineAligned="false">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="1"
                android:baselineAligned="false">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="0.5"
                    android:background="@drawable/borde_l"
                    android:baselineAligned="false">
                    <TextView
                        android:id="@+id/textUnit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        tools:text="@string/caja"
                        android:textSize="@dimen/size_24"
                        android:fontFamily="@font/roboto_bold"
                        android:gravity="center"
                        android:padding="@dimen/padding_3" />

                    <TextView
                        android:id="@+id/textCantidad"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        tools:text="5"
                        android:textSize="@dimen/size_24"
                        android:padding="2dp"
                        android:gravity="center"
                        android:fontFamily="@font/roboto_light"
                        android:autoSizeTextType="uniform"
                        android:autoSizeMaxTextSize="@dimen/size_25"
                        android:autoSizeMinTextSize="@dimen/size_8"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="0.5">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/kg"
                        android:textSize="@dimen/size_24"
                        android:fontFamily="@font/roboto_bold"
                        android:gravity="center"
                        android:padding="@dimen/padding_3"/>

                    <TextView
                        android:id="@+id/textKg"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        tools:text="80.6"
                        android:textSize="@dimen/size_24"
                        android:padding="2dp"
                        android:fontFamily="@font/roboto_light"
                        android:gravity="center"
                        android:autoSizeTextType="uniform"
                        android:autoSizeMaxTextSize="@dimen/size_25"
                        android:autoSizeMinTextSize="@dimen/size_8"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>