<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.RegistrarE_SActivity"
    android:orientation="vertical"
    android:weightSum="1">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

       <include
           android:id="@+id/toolbar"
           layout="@layout/toolbar"/>

    </com.google.android.material.appbar.AppBarLayout>

    <TextView
        android:id="@+id/txtNameProductoR"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_50"
        android:textSize="@dimen/size_25"
        android:textAlignment="center"
        android:gravity="center"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/marginTop_10"
        android:layout_marginBottom="@dimen/marginTop_10"
        android:autoSizeTextType="uniform"
        android:autoSizeMaxTextSize="@dimen/size_25"
        android:autoSizeMinTextSize="@dimen/size_8"/>

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_card_p_80">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/color_bg_light"
            android:gravity="center">

            <androidx.cardview.widget.CardView
                android:layout_width="@dimen/height_card_p_80"
                android:layout_height="@dimen/height_60"
                tools:backgroundTint="@color/colorPrimaryLight"
                android:layout_margin="@dimen/margin_5"
                app:cardCornerRadius="6dp"
                android:foreground="?android:attr/selectableItemBackground">
                <TextView
                    android:id="@+id/txtThree"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/tres_kg"
                    android:textSize="@dimen/size_16"/>
                <EditText
                    android:id="@+id/etdNumThree"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_40"
                    android:hint="@string/cero"
                    android:inputType="number"
                    android:textColor="@android:color/holo_red_dark"
                    android:layout_gravity="bottom"
                    android:gravity="center"
                    android:textSize="@dimen/size_16"
                    android:autofillHints="@string/cero"/>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="@dimen/height_card_p_80"
                android:layout_height="@dimen/height_60"
                tools:backgroundTint="@color/colorPrimaryLight"
                android:layout_margin="@dimen/margin_5"
                app:cardCornerRadius="6dp"
                android:foreground="?android:attr/selectableItemBackground">
                <TextView
                    android:id="@+id/txtTwoFour"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/two_four"
                    android:textSize="@dimen/size_16"/>
                <EditText
                    android:id="@+id/etdNumTwoFour"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_40"
                    android:hint="@string/cero"
                    android:inputType="number"
                    android:layout_gravity="bottom"
                    android:textColor="@android:color/holo_red_dark"
                    android:gravity="center"
                    android:textSize="@dimen/size_16"
                    android:autofillHints="@string/cero"/>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="@dimen/height_card_p_80"
                android:layout_height="@dimen/height_60"
                tools:backgroundTint="@color/colorPrimaryLight"
                android:layout_margin="@dimen/margin_5"
                app:cardCornerRadius="6dp"
                android:foreground="?android:attr/selectableItemBackground">
                <TextView
                    android:id="@+id/txtTwoTwo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/two_two"
                    android:gravity="center"
                    android:textSize="@dimen/size_16"/>

                <EditText
                    android:id="@+id/etdNumTwoTwo"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_40"
                    android:layout_gravity="bottom"
                    android:autofillHints="@string/cero"
                    android:gravity="center"
                    android:hint="@string/cero"
                    android:inputType="number"
                    android:textColor="@android:color/holo_red_dark"
                    android:textSize="@dimen/size_16" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="@dimen/height_card_p_80"
                android:layout_height="@dimen/height_60"
                tools:backgroundTint="@color/colorPrimaryLight"
                android:layout_margin="@dimen/margin_5"
                app:cardCornerRadius="6dp"
                android:foreground="?android:attr/selectableItemBackground">
                <TextView
                    android:id="@+id/txtTwo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/two"
                    android:textSize="@dimen/size_16"/>
                <EditText
                    android:id="@+id/etdNumTwo"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_40"
                    android:hint="@string/cero"
                    android:inputType="number"
                    android:layout_gravity="bottom"
                    android:textColor="@android:color/holo_red_dark"
                    android:gravity="center"
                    android:textSize="@dimen/size_16"
                    android:autofillHints="@string/cero"/>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="@dimen/height_card_p_80"
                android:layout_height="@dimen/height_60"
                tools:backgroundTint="@color/colorPrimaryLight"
                android:layout_margin="@dimen/margin_5"
                app:cardCornerRadius="6dp"
                android:foreground="?android:attr/selectableItemBackground">
                <TextView
                    android:id="@+id/txtOneSix"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/one_six"
                    android:gravity="center"
                    android:textSize="@dimen/size_16"/>
                <EditText
                    android:id="@+id/etdNumOneSix"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_40"
                    android:hint="@string/cero"
                    android:inputType="number"
                    android:layout_gravity="bottom"
                    android:textColor="@android:color/holo_red_dark"
                    android:gravity="center"
                    android:textSize="@dimen/size_16"
                    android:autofillHints="@string/cero"/>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="@dimen/height_card_p_80"
                android:layout_height="@dimen/height_60"
                tools:backgroundTint="@color/colorPrimaryLight"
                android:layout_margin="@dimen/margin_5"
                app:cardCornerRadius="6dp"
                android:foreground="?android:attr/selectableItemBackground">
                <TextView
                    android:id="@+id/txtOneFour"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/one_four"
                    android:gravity="center"
                    android:textSize="@dimen/size_16"/>
                <EditText
                    android:id="@+id/etdNumOneFour"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_40"
                    android:hint="@string/cero"
                    android:inputType="number"
                    android:textColor="@android:color/holo_red_dark"
                    android:layout_gravity="bottom"
                    android:gravity="center"
                    android:textSize="@dimen/size_16"
                    android:autofillHints="@string/cero"/>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </HorizontalScrollView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/cantidad_piezas"
                android:textSize="@dimen/size_20"
                android:textAlignment="center"
                android:layout_marginTop="@dimen/marginTop_20"
                android:padding="@dimen/padding_5"/>

            <EditText
                android:id="@+id/edtCantPiezas"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_60"
                android:layout_marginEnd="@dimen/marginEnd_100"
                android:layout_marginStart="@dimen/marginEnd_100"
                android:background="@drawable/borde_card"
                android:textAlignment="center"
                android:hint="@string/cero"
                android:textSize="@dimen/size_28"
                android:inputType="numberDecimal"
                android:autofillHints="@string/cero"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/peso_con_caja"
                android:textSize="@dimen/size_20"
                android:textAlignment="center"
                android:layout_marginTop="@dimen/marginTop_20"
                android:padding="@dimen/padding_5"/>

            <EditText
                android:id="@+id/edtPesoTCajas"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_60"
                android:layout_marginStart="@dimen/marginEnd_100"
                android:layout_marginEnd="@dimen/marginEnd_100"
                android:autofillHints="@string/cero"
                android:background="@drawable/borde_card"
                android:hint="@string/cero"
                android:inputType="numberDecimal"
                android:textAlignment="center"
                android:textColor="@android:color/holo_orange_dark"
                android:textSize="@dimen/size_28" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/peso_sin_caja"
                android:textSize="@dimen/size_20"
                android:textAlignment="center"
                android:layout_marginTop="@dimen/marginTop_20"
                android:padding="@dimen/padding_5"/>

            <TextView
                android:id="@+id/txtPesoTSinC"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_60"
                android:layout_marginEnd="@dimen/marginEnd_100"
                android:layout_marginStart="@dimen/marginEnd_100"
                android:background="@drawable/borde_card"
                android:text="@string/cero"
                android:gravity="center_vertical|center_horizontal"
                android:textSize="@dimen/size_28"
                android:autoSizeTextType="uniform"
                android:autoSizeMaxTextSize="@dimen/size_28"
                android:autoSizeMinTextSize="@dimen/size_8"/>

            <Button
                android:id="@+id/btnCargar"
                android:layout_width="@dimen/width_btn_250"
                android:layout_height="wrap_content"
                android:text="@string/cargar"
                android:textSize="@dimen/size_24"
                android:background="@drawable/borde_card_entradas"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/margin_Top_40"
                android:layout_marginBottom="@dimen/margin_Bottom_20"/>
        </LinearLayout>

    </ScrollView>
</LinearLayout>