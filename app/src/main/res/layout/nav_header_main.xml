<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_header_height"
    android:background="@drawable/side_nav_bar"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/txtNumberBodega"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bodega 1"
            android:textSize="@dimen/size_15"
            android:layout_marginTop="@dimen/marginTop_20"
            android:fontFamily="@font/roboto_bold"
            android:layout_gravity="end"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="bottom">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imgUser"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:elevation="@dimen/elevation_4"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_add_img"
                app:civ_border_width="1dp"
                app:civ_border_color="@color/colorSecondaryText"/>

            <TextView
                android:id="@+id/txtNameUser"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_regular"
                android:paddingTop="@dimen/nav_header_vertical_spacing"
                android:text="Julio Cesar"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

            <TextView
                android:id="@+id/txtPuesto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Encargado de Inventario" />
        </LinearLayout>

    </FrameLayout>
</LinearLayout>
